<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pschotte.grupetto1">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- <activity android:name="com.facebook.FacebookActivity"/> -->

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />


         <activity
             android:name=".SportActivity"
             android:label="@string/title_activity_sport"
             android:theme="@style/AppTheme.NoActionBar" />
         <activity
             android:name=".ProfilActivity"
             android:label="@string/title_activity_profil"
             android:theme="@style/AppTheme.NoActionBar" />
         <activity
             android:name=".AccueilActivity"
             android:label="@string/title_activity_accueil"
             android:theme="@style/AppTheme.NoActionBar" />
         <activity
             android:name=".UsersFoundActivity"
             android:label="@string/title_activity_users_found"
             android:theme="@style/AppTheme.NoActionBar" />
         <activity
             android:name=".DiscussionActivity"
             android:label="@string/title_activity_discussion"
             android:theme="@style/AppTheme.NoActionBar" />
         <activity android:name=".CalendarActivity" />
         <activity
             android:name=".ListGroupActivity"
             android:label="@string/title_activity_list_group"
             android:theme="@style/AppTheme.NoActionBar" />
         <activity android:name=".GroupActivity" />
         <activity android:name=".SearchTrainingActivity" />
         <activity android:name=".CreateTrainingActivity"></activity>
     </application>

 </manifest>
